{% if pagination.pages %}

<div class="pagination">
<ul>
    <li>总共 <strong>{{ pages.count }}</strong> 条 </li>
{% if pagination.previous %}
<li><a href="{{ pagination.view }}&page={{ pagination.previous }}">&lt;&lt; 前一页</a></li>
{% endif %}


{% for page in pagination.left %}
<li><a href="{{ pagination.view }}&page={{ page }}" {% ifequal page pagination.page %}class="pagination_current"{% endifequal %}>{{ page }}</a></li>
{% endfor %}

{% if pagination.middle %}
<li>...</li>
{% for page in pagination.middle %}
<li><a href="{{ pagination.view }}&page={{ page }}" {% ifequal page pagination.page %}class="pagination_current"{% endifequal %}>{{ page }}</a></li>
{% endfor %}
{% endif %}

{% if pagination.right %}
<li>...</li>
{% for page in pagination.right %}
<li><a href="{{ pagination.view }}&page={{ page }}" {% ifequal page pagination.page %}class="pagination_current"{% endifequal %}>{{ page }}</a></li>
{% endfor %}
{% endif %}

{% if pagination.next %}
<li><a href="{{ pagination.view }}&page={{ pagination.next }}">后一页 &gt;&gt;</a></li>
{% endif %}
</ul>

</div>

{% endif %}
